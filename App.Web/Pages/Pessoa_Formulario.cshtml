@page "/pessoas/formulario"
<h4>Formulário de Pessoas</h4>
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-3 col-sm-12">
                <div class="form-group mb-12">
                    <label>Nome</label>
                    <input type="text" name="nome" class="form-control">
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="form-group mb-12">
                    <label>Email</label>
                    <input type="text" name="email" class="form-control">
                </div>
            </div>
            <div class="col-md-3 col-sm-12">
                <div class="form-group mb-12">
                    <label>Senha</label>
                    <input type="text" name="senha" class="form-control">
                </div>
            </div>
            <div class="col-md-3 col-sm-12">
                <div class="form-group mb-12">
                    <label>CPF</label>
                    <input type="text" name="cpf" class="form-control">
                </div>
            </div>
            <div class="col-md-3 col-sm-12">
                <div class="form-group mb-12">
                    <label>Data de Nascimento</label>
                    <input type="text" name="dataAniversario" class="form-control">
                </div>
            </div>
            <div class="col-md-12 text-right">
                <button class="btn btn-danger" onclick="window.location.href='/pessoas'">Cancelar</button>
                <button class="btn btn-success" onclick="criar();">Criar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/pages/pessoa_formulario.js"></script>
}
